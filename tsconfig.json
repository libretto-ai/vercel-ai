{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2022",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src/**/*", "examples/**/*"]
}
